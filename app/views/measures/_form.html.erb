<%= form_with(model: measure, local: true) do |form| %>
  <% if measure.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(measure.errors.count, "error") %> prohibited this measure from being saved:</h2>

      <ul>
      <% measure.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :section %>
    <%= form.text_field :section, id: :measure_section %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :measure_name %>
  </div>

  <div class="field">
    <%= form.label :hint %>
    <%= form.text_field :hint, id: :measure_hint %>
  </div>

  <div class="field">
    <%= form.label :start_hint %>
    <%= form.text_field :start_hint, id: :measure_start_hint %>
  </div>

  <div class="field">
    <%= form.label :end_hint %>
    <%= form.text_field :end_hint, id: :measure_end_hint %>
  </div>

  <div class="field">
    <%= form.label :required %>
    <%= form.check_box :required, id: :measure_required %>
  </div>

  <div class="field">
    <%= form.label :allocation_percent %>
    <%= form.number_field :allocation_percent, id: :measure_allocation_percent %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
